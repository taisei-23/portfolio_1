<aside
  data-controller="mountain-sidebar"
  data-mountain-sidebar-target="panel"
  class="w-56 bg-white border-l border-black shadow-lg z-40 overflow-y-auto flex flex-col hidden"
>
  <div class="p-4">
    <h2 class="text-lg font-semibold mb-4">移動手段を選択</h2>
    <div class="flex space-x-4 text-2xl mb-4">
      <button data-action="click->mountain-sidebar#selectCar">🚗</button>
      <button data-action="click->mountain-sidebar#selectTrain">🚆</button>
    </div>

    <div data-mountain-sidebar-target="carForm" class="hidden">
      <h3 class="text-md font-semibold mb-2">車での経路検索</h3>
      <%= form_with url: search_routes_path, method: :get, local: true do %>
        <div class="mb-2">
          <label>現在地：</label>
          <%= text_field_tag :origin, nil, class: "w-full border p-1" %>
        </div>
        <div class="mb-2">
          <label>目的地：</label>
          <%= text_field_tag :destination, nil, class: "w-full border p-1" %>
        </div>
        <%= submit_tag "検索", class: "bg-blue-500 text-white px-3 py-1 rounded w-full" %>
      <% end %>
    </div>
  </div>
</aside>
