<div class="min-h-screen flex items-center justify-center">
  <div class="w-full max-w-md bg-white p-8">
    <h2 class="text-2xl font-bold mb-6 text-center">新規登録</h2>

    <%= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name, "ユーザー名", class: "block mb-1 font-semibold" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "w-80 border border-gray-300 rounded p-2" %>
      </div>

      <div class="field">
        <%= f.label :email, "メールアドレス", class: "block mb-1 font-semibold" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-80 border border-gray-300 rounded p-2" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード", class: "block mb-1 font-semibold" %><br />
        <% if @minimum_password_length %>
        <em>(最小<%= @minimum_password_length %> 文字)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "w-80 border border-gray-300 rounded p-2" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "パスワード(確認)", class: "block mb-1 font-semibold" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-80 border border-gray-300 rounded p-2" %>
      </div>

      <div class="actions mt-6 text-center">
        <%= f.submit "登録", class: "bg-blue-600 hover:bg-blue-700 text-white rounded px-5 py-1" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
