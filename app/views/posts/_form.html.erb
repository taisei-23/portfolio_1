<%= form_with model: post, local: true do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "エラー") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title, class: "w-full border border-gray-300 rounded p-2" %>
  </div>

  <div class="field">
    <%= f.label :body, "本文" %><br />
    <%= f.text_area :body, class: "border border-gray-300 rounded p-2 w-full h-32" %>
  </div>

	<div class="field">
  	<%= f.label :image, "画像" %><br />
    <%= f.file_field :image, class: "border border-gray-300 rounded p-2" %>
  </div>
  <br />
	<div class="actions">
		<%= f.submit "投稿", class: "bg-blue-600 text-white rounded px-3 py-1" %>
	</div>
<% end %>
